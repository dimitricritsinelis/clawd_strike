{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Bazaar Slice Map Spec",
  "type": "object",
  "required": [
    "metadata",
    "global_dimensions",
    "zones"
  ],
  "properties": {
    "metadata": {
      "type": "object"
    },
    "global_dimensions": {
      "type": "object"
    },
    "lanes": {
      "type": "object"
    },
    "zones": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "rect"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "rect": {
            "type": "object",
            "required": [
              "x",
              "y",
              "w",
              "h"
            ],
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              },
              "w": {
                "type": "number"
              },
              "h": {
                "type": "number"
              }
            }
          }
        }
      }
    },
    "anchors": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  }
}
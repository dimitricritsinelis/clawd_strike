{
  "name": "clawd-strike",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "node ./scripts/dev.mjs",
    "dev:client": "pnpm --filter @clawd-strike/client dev",
    "dev:server": "pnpm --filter @clawd-strike/server dev",
    "test": "vitest run",
    "lint": "eslint .",
    "typecheck": "tsc -b && node ./scripts/clean-generated.mjs",
    "ci:check": "pnpm lint && pnpm typecheck && pnpm test",
    "clean:generated": "node ./scripts/clean-generated.mjs",
    "audit:unused-exports": "pnpm dlx ts-prune -p apps/client/tsconfig.json && pnpm dlx ts-prune -p apps/server/tsconfig.json && pnpm dlx ts-prune -p packages/engine/tsconfig.json && pnpm dlx ts-prune -p packages/shared/tsconfig.json",
    "audit:assets": "node ./scripts/audit-assets.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.5",
    "eslint": "^9.19.0",
    "playwright": "^1.50.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.0.11",
    "vitest": "^2.1.8"
  }
}
